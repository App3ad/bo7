<Alloy>
  <Collection src="product"/>
  <Window>
    <ListView defaultItemTemplate="template" method="createCollectionView" module="CollectionView">
      <Templates>
        <ItemTemplate name="template">
          <View class="container ccBox">
            <Label bindId="title" class="titleLbl"/>
            <Label bindId="time" class="timeLbl"/>
            <View class="lineView">
              <Label bindId="type" class="iconLbl"/>
              <Label bindId="bank" class="iconLbl"/>
              <Label bindId="period" class="iconLbl"/>
            </View>
          </View>
        </ItemTemplate>
        <ItemTemplate name="add">
          <Button class="addBtn"/>
        </ItemTemplate>
      </Templates>
      <ListSection dataCollection="product" dataTransform="transfomer" method="createCollectionSection" module="de.marcelpociot.collectionview">
        <ListItem bank:backgroundColor="{bankColor}" bank:text="{bankCode}" method="createCollectionItem" module="de.marcelpociot.collectionview" period:text="{period}" time:text="{time}" title:text="{title}" type:backgroundColor="{typeColor}"
          type:text="{typeCode}"/>
      </ListSection>
      <ListSection method="createCollectionSection" module="de.marcelpociot.collectionview">
        <ListItem method="createCollectionItem" module="de.marcelpociot.collectionview" template="add"/>
      </ListSection>
    </ListView>
  </Window>
</Alloy>
